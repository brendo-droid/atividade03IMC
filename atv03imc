package programaimc;
import javax.swing. *;
/ **
 * @author brendo
 * /
public class programaimc {

    public static void main (String [] args) {
        
        peso variavel, altura, imc;
        String Peso, Altura;
        
        Peso = JOptionPane.showInputDialog ("Digite seu peso(ex.:50.4)");
        peso = Float.parseFloat (Peso);
        
        Altura = JOptionPane.showInputDialog ("Digite sua altura (ex.:1.70)");
        altura = Float.parseFloat (Altura);
        
        imc = peso / (altura * altura);    
        
        if (imc <17)  {
            JOptionPane.showMessageDialog (null, "Muito abaixo do peso");
        }
        else if (imc> = 17 && imc <18,49)
        {
            JOptionPane.showMessageDialog (null, "Abaixo do peso");
        }
        else if (imc> = 18,50 && imc <24,99)
        {
            JOptionPane.showMessageDialog (null, "Peso normal");
        }
        else if (imc> = 25 && imc <29,99)
        {
            JOptionPane.showMessageDialog (null, "Acima do peso");
        }
        else if (imc> = 30 && imc <34,99)
        {
            JOptionPane.showMessageDialog (null, "Obesidade I");
        }
        else if (imc> = 35 && imc <39,99)
        {
            JOptionPane.showMessageDialog (null, "Obesidade II (Severa)");
        }
        else if (imc> 40)
        {
            JOptionPane.showMessageDialog (null, "Obesidade III (Mórbida)");
        }   
        senão
        {
            JOptionPane.showMessageDialog (null, "Valor inváido
        }
    }
}
